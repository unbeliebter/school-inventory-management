<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1762543626104-3 create equipment table" author="Sven Pradela">
        <createTable tableName="equipment">
            <column name="id" type="TEXT">
                <constraints primaryKey="true"/>
            </column>
            <column name="inventory_number" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="inventory_name" type="TEXT"/>
            <column name="state" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="organizational_unit_id" type="TEXT"/>
            <column name="organizational_group_id" type="TEXT"/>
            <column name="subject_id" type="TEXT"/>
            <column name="position_id" type="TEXT"/>
            <column name="responsibility_id" type="TEXT"/>
        </createTable>
    </changeSet>

    <changeSet id="1762543878183-2 create user table" author="Sven Pradela">
        <createTable tableName="users">
            <column name="id" type="TEXT">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="TEXT">
                <constraints unique="true"/>
            </column>
            <column name="firstname" type="TEXT"/>
            <column name="lastname" type="TEXT"/>
            <column name="e_mail" type="TEXT"/>
            <column name="usertype" type="TEXT"/>
            <column name="password" type="TEXT"/>
        </createTable>
    </changeSet>

    <changeSet id="1762544046024-1 create organizational_unit table" author="Sven Pradela">
        <createTable tableName="organizational_unit">
            <column name="id" type="TEXT">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="TEXT"/>
        </createTable>
    </changeSet>

    <changeSet id="1762544155602-1 create organizational_group table" author="Sven Pradela">
        <createTable tableName="organizational_group">
            <column name="id" type="TEXT">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="TEXT"/>
        </createTable>
    </changeSet>

    <changeSet id="1762544197613-1 create subject table" author="Sven Pradela">
        <createTable tableName="subject">
            <column name="id" type="TEXT">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="TEXT"/>
            <column name="abbreviation" type="varchar(8)"/>
        </createTable>
    </changeSet>

    <changeSet id="1762544308489-1 create position table" author="Sven Pradela">
        <createTable tableName="position">
            <column name="id" type="TEXT">
                <constraints primaryKey="true"/>
            </column>
            <column name="school" type="TEXT"/>
            <column name="room" type="TEXT"/>
            <column name="description" type="TEXT"/>
        </createTable>
    </changeSet>

    <changeSet id="1762544427448-2 create responsibility table" author="Sven Pradela">
        <createTable tableName="responsibility">
            <column name="id" type="TEXT">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="TEXT"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="responsibility" 
                                 baseColumnNames="user_id"
                                 constraintName="fk_responsibility_user" 
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="1762546858879-2" author="Sven Pradela">
        <addForeignKeyConstraint baseTableName="equipment" baseColumnNames="organizational_unit_id"
                                 constraintName="fk_equipment_organizational_unit"
                                 referencedTableName="organizational_unit"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="equipment" baseColumnNames="organizational_group_id"
                                 constraintName="fk_equipment_organizational_group"
                                 referencedTableName="organizational_group"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="equipment" baseColumnNames="subject_id"
                                 constraintName="fk_equipment_subject"
                                 referencedTableName="subject"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="equipment" baseColumnNames="position_id"
                                 constraintName="fk_equipment_position"
                                 referencedTableName="position"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="equipment" baseColumnNames="responsibility_id"
                                 constraintName="fk_equipment_responsibility"
                                 referencedTableName="responsibility"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="1762630460677-1 rename column in equipment" author="Sven Pradela">
        <renameColumn tableName="equipment" oldColumnName="inventory_name" newColumnName="equipment_name"/>
    </changeSet>

    <changeSet id="1762710819842-1 remove responsibility" author="Sven Pradela">
        <dropForeignKeyConstraint baseTableName="equipment" constraintName="fk_equipment_responsibility"/>
        <renameColumn tableName="equipment" oldColumnName="responsibility_id" newColumnName="responsible_user_id"/>
        <addForeignKeyConstraint baseTableName="equipment" baseColumnNames="responsible_user_id"
                                 constraintName="fk_equipment_user"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>

        <dropTable tableName="responsibility"/>
    </changeSet>
    
    <changeSet id="1768691323887-1 add role table" author="Sven Pradela">
        <createTable tableName="roles">
            <column name="id" type="TEXT">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="TEXT"/>
        </createTable>
    </changeSet>

    <changeSet id="1768691483419-1 add roles to table" author="Sven Pradela">
        <sqlFile path="roles_01.sql"
                 relativeToChangelogFile="true"
                 encoding="UTF-8"/>
    </changeSet>

    <changeSet id="1768691813479-1 changes for user roles" author="Sven Pradela">
        <sql>
            UPDATE users
            SET usertype = LOWER(usertype)
            WHERE usertype IS NOT NULL;
        </sql>

        <renameColumn tableName="users" oldColumnName="usertype" newColumnName="role_id"/>
        <addForeignKeyConstraint baseTableName="users"
                                 baseColumnNames="role_id"
                                 constraintName="fk_users_roles"
                                 referencedTableName="roles"
                                 referencedColumnNames="id"/>
    </changeSet>
    
    <changeSet id="1770104720357-1 add column changed_password to users" author="Sven Pradela">
        <addColumn tableName="users">
            <column name="changed_password" type="boolean" defaultValue="false"/>
        </addColumn>
    </changeSet>
    
    <changeSet id="1770104778035-1 create user_password_changes" author="Sven Pradela">
        <createTable tableName="user_password_changes">
            <column name="id" type="TEXT">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="TEXT"/>
            <column name="password_before" type="TEXT"/>
            <column name="password_after" type="TEXT"/>
            <column name="changed_at" type="timestamptz"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="user_password_changes"
                                 baseColumnNames="user_id"
                                 constraintName="fk_users_password_changes"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="1770145375814-1" author="Sven Pradela">
        <addColumn tableName="roles">
            <column name="fe_name" type="TEXT"/>
        </addColumn>

        <sql>
            UPDATE roles SET fe_name = 'Administrator' WHERE id = 'admin';
            UPDATE roles SET fe_name = 'Verantwortlicher' WHERE id = 'responsible';
            UPDATE roles SET fe_name = 'Lehrkraft' WHERE id = 'teacher';
            UPDATE roles SET fe_name = 'Benutzer' WHERE id = 'user';
        </sql>
    </changeSet>

    <changeSet id="1770150583470-2 add trigger for logging password changes" author="Sven Pradela">
        <sqlFile path="password_changes_trigger_01.sql"
                 relativeToChangelogFile="true"
                 encoding="UTF-8"
                 splitStatements="false"/>
    </changeSet>

    <changeSet id="1770282407390-1 add requires_password_reset to user table" author="Sven Pradela">
        <addColumn tableName="users">
            <column name="requires_password_reset" type="boolean" defaultValue="false"/>
        </addColumn>
    </changeSet>

    <changeSet id="1770289214572-1 add senior responsible role" author="Sven Pradela">
        <sql>
            INSERT INTO roles(id, name, fe_name)
            VALUES ('senior_responisble', 'SENIOR_RESPONSIBLE', 'Ober-Verantwortlicher')
        </sql>
    </changeSet>

    <changeSet id="1770289901809-2 create table equipment_renter" author="Sven Pradela">
        <createTable tableName="equipment_renter">
            <column name="id" type="TEXT">
                <constraints primaryKey="true"/>
            </column>
            <column name="equipment_id" type="TEXT"/>
            <column name="renter" type="TEXT"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="equipment_renter" baseColumnNames="equipment_id"
                                 constraintName="fk_equipment"
                                 referencedTableName="equipment"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="1770363050834-1 add unique constraints" author="Sven Pradela">
        <addUniqueConstraint tableName="users" columnNames="username"/>
        <addUniqueConstraint tableName="equipment" columnNames="inventory_number"/>
    </changeSet>

